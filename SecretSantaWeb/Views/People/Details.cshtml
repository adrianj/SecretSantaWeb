@model SecretSantaWeb.Models.Person

@{
    ViewBag.Title = "Details";
}

<h2>Person Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Family.FamilyName)
        </dt>

        <dd>
            @Html.ActionLink(Model.Family.FamilyName, "Details", "Families", new { id = Model.FamilyID },null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Not buying for
        </dt>
        <dd></dd>

        @foreach (var item in Model.Exclusions)
        {
            <dt></dt>
            <dd>
               
                @Html.ActionLink(item.NotBuyingFor.Name, "Details", "Exclusions", new { id = item.ExclusionID }, null)
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PersonID }) |
    @Html.ActionLink("Add Exclusion", "AddToPerson", "Exclusions", new { personID = Model.PersonID }, null) |
    @Html.ActionLink("Back to List", "Index")
</p>
